{
    "workbench.startupEditor": "newUntitledFile", //起動時に無題ファイルを開く
    "breadcrumbs.enabled": true, // 階層リンク
    "files.autoSave": "afterDelay", // オートセーブ
    "editor.tabSize": 2, // タブサイズ
    "editor.renderWhitespace": "boundary", // 半角スペースの表示方法
    "editor.wordWrap": "on", // 折り返し表示
    "editor.fontFamily": "源ノ角ゴシック Code JP", // エディターのフォント
    "editor.fontSize": 14, // フォントサイズ
    "editor.formatOnPaste": true, // ペースト時に自動でフォーマット
    "editor.formatOnType": true, // 入力した行を自動でフォーマット
    "editor.minimap.renderCharacters": false, // ミニマップの表示文字をブロックに変更
    "editor.minimap.showSlider": "always", // 表示領域をミニマップで常にハイライト
    "editor.renderControlCharacters": true, // 制御文字を表示

    //ターミナル
    "terminal.integrated.fontFamily": "Source Code Pro for Powerline", // フォント
    "terminal.integrated.fontSize": 13, // フォントサイズ
    "terminal.integrated.fontWeight": "300", // 太字じゃないときのフォントの太さ
    "terminal.integrated.fontWeightBold": "500", // 太字のときのフォントの太さ
    "terminal.integrated.copyOnSelection": true, //ターミナルで選択したテキストを自動コピ-
    
    //ターミナルでCmder
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\sysnative\\cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/K",
        "D:\\cmder\\vendor\\init.bat"
    ],
    
    // 拡張機能設定
    "workbench.colorTheme": "Flatland Monokai",
    "workbench.iconTheme": "material-icon-theme",

    // C言語設定
    "C_Cpp.default.includePath": [
        "D:\\MinGW\\include",
        "D:\\MinGW\\lib\\gcc\\mingw32\\6.3.0\\include\\c++",
        "D:\\MinGW\\lib\\gcc\\mingw32\\6.3.0\\include\\c++\\mingw32"
    ],

    // Emmet
    "emmet.showSuggestionsAsSnippets": true, // Emmet の候補を表示
    "emmet.triggerExpansionOnTab": true, // TAB キーで Emmet を展開できるようにする
    "emmet.variables": { // Emmet で展開される HTML の言語を変更
        "lang": "ja"
    }

}